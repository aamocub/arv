{
        // See https://go.microsoft.com/fwlink/?LinkId=733558
        // for the documentation about the tasks.json format
        "version": "2.0.0",
        "tasks": [
                {
                        "label": "Verilator: Simulate design",
                        "type": "shell",
                        "command": "verilator",
                        "args": [
                                "-Wall",
                                "-Wno-fatal",
                                "${relativeFile}",
                                "-I${workspaceFolder}/bench",
                                "-I${workspaceFolder}/rtl",
                                "--timing",
                                "--binary",
                                "-j",
                                "0",
                                "--trace-fst",
                                "--x-assign",
                                "unique",
                                "--x-initial",
                                "unique",
                                "-trace-structs",
                                "--autoflush",
                                "--assert",
                                "--Mdir",
                                "${workspaceFolder}/sim/obj_dir",
                        ],
                        "presentation": {
                                "echo": true,
                                "reveal": "always",
                                "focus": true,
                                "panel": "shared",
                                "showReuseMessage": true,
                                "clear": false
                        },
                        "problemMatcher": []
                }
        ]
}